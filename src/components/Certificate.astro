---
const {certificateURL, certificateName, certificateProvider, certificateSpan} = Astro.props;
---

<a class=`certificate text-center bg-card px-3 py-2 rounded-lg ${certificateSpan}` href=`/certificados/certificado-${certificateURL}.pdf` target="_blank" rel="noopener">
    <i class='ti ti-certificate text-dark-text text-3xl'></i>
    <h3 class="text-white text-md">{certificateName}</h3>
    <p class="text-dark-text">{certificateProvider}</p>
</a>
